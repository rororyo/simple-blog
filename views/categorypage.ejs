<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/styles/catPage.css">
    <base href="/">
</head>
<body>
    <!-- Include Navbar -->
    <%- include('navbar.ejs') %>
    <div class="container mt-5">
        <h1 class="text-center" style="color: palevioletred;"><%= category_name %></h1>
        <h2>Search bar</h2>
        <div class="row">
            <% posts.forEach(post => { %>
            <div class="col-md-3">
                <div class="card mb-3 cat-card">
                    <img src="/uploads/<%= post.picture %>" alt="placeholder img" class="post-img">
                    <div class="card-body">
                        <h5 class="card-title"><%= post.title %></h5>
                        <p class="card-text"><%= post.post_content.substring(0, 75) + (post.post_content.length > 75 ? "..." : "") %></p>
                        <a href="/posts/<%= post.id %>" class="btn btn-primary">Read more...</a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
    <!-- Include Footer -->
    <%- include('footer.ejs') %>
    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
